rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ====================================================================
    // HELPER FUNCTIONS
    // ====================================================================

    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(ownerId) {
      return isAuthenticated() && request.auth.uid == ownerId;
    }

    // ====================================================================
    // COURSES & CONTENT (Public Read if Published)
    // ====================================================================
    
    match /courses/{courseId} {
      // Allow public read if published
      allow read: if resource.data.isPublished == true || isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    match /courseModules/{moduleId} {
       // Allow public read if parent course is published
       allow read: if get(/databases/$(database)/documents/courses/$(resource.data.courseId)).data.isPublished == true || isAuthenticated();
       allow write: if isAuthenticated();
    }

    match /courseLessons/{lessonId} {
       // Allow public read if parent course is published
       // Note: This matches the requirement for the Course Detail page to list all lessons (even locked ones).
       allow read: if get(/databases/$(database)/documents/courses/$(resource.data.courseId)).data.isPublished == true || isAuthenticated();
       allow write: if isAuthenticated();
    }

    // ====================================================================
    // DEFAULT RULE (Auth Required for everything else)
    // ====================================================================
    
    // This covers users, enrollments, payments, etc.
    match /{document=**} {
      allow read, write: if isAuthenticated();
    }
  }
}
